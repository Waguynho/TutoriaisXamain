<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!-- Base theme applied no matter what API -->
  <style name="MyCustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>

    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="windowActionModeOverlay">true</item>


    <item name="android:colorPrimary">@color/dark_blue</item>
    <item name="android:windowBackground">@color/cinza_mediano</item>
    <item name="android:textColorPrimary">@color/branco</item>
    <item name="android:textColorSecondary">@color/laranja_claro</item>
    <item name="android:textColorTertiary">@color/dark_blue</item>


    <!--<item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>-->
  </style>

  <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
    
    <!-- Used for the buttons -->
    <item name="colorAccent">@color/dark_blue</item>
    <!-- Used for the title and text -->
    <item name="android:textColorPrimary">@color/dark_blue</item>
    <!-- Used for the background -->
    <item name="android:background">@color/cinza_claro</item>
  </style>
</resources>
