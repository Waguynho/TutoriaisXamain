<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!-- Base theme applied no matter what API -->
  <style name="MyCustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    
    <!-- colorPrimary is used for the default action bar background -->
    <item name="android:colorPrimary">@color/color_a</item>
    <item name="android:windowBackground">@color/color_b</item>
    <item name="android:colorAccent">@color/color_c</item>
    <item name="android:textColorPrimary">@color/color_d</item>

    
    <item name="windowActionModeOverlay">true</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
  </style>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#FF4081</item>
  </style>
</resources>
