<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   x:Class="Phoneword.MainPage"
                                           >
    <ContentPage.BackgroundColor>
        <OnPlatform x:TypeArguments="Color"
                  iOS="Green"
                  WinPhone="Gray"
                 />
    </ContentPage.BackgroundColor>

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="20, 40, 20, 20" />
            <On Platform="Android, UWP" Value="20" />
        </OnPlatform>
    </ContentPage.Padding>
    
    <StackLayout>
        <Label Text="Enter a Phoneword:" >
            <Label.TextColor>
                <OnPlatform x:TypeArguments="Color"
                  iOS="Green"
                  WinPhone="YellowGreen"
                  Android="White"
                 />
            </Label.TextColor>
        </Label>

        <Entry x:Name="phoneNumberText" Text="Wagner Santos" TextColor="White" />
        <Button x:Name="translateButon" Text="Translate" Clicked="OnTranslate" />
        <Button x:Name="callButton" Text="Call" IsEnabled="false" Clicked="OnCall" />
        <Button x:Name="callHistoryButton" Text="Call History" IsEnabled="True"  Clicked="OnCallHistory" />
        <Button x:Name="helloMonsterButton" Text="Hello Monster" IsEnabled="True"  Clicked="OnHelooMonster" />
    </StackLayout>
</ContentPage>